<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".biao.biao_NewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#00FF0F"
        >


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#0F0FFF"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="64dp"
            android:text="计划表类型"
            android:textSize="26dp"
            android:background="#0ff000"
            />


        <Spinner
            android:layout_width="128dp"
            android:layout_height="46dp"

            android:layout_marginStart="256dp"
            android:layout_marginTop="64dp"

            android:background="#0ff000"
            android:id="@+id/id_biao_new_spinner"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="128dp"
            android:text="表名"
            android:textSize="26dp"
            android:background="#0ff000"
            />

        <EditText
            android:layout_width="128dp"
            android:layout_height="46dp"

            android:layout_marginStart="256dp"
            android:layout_marginTop="128dp"

            android:inputType="text"
            android:lines="1"

            android:background="#0ff000"
            android:id="@+id/id_biao_new_et"
            />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="#ff0FfF"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_weixin"
            android:layout_marginStart="256dp"
            android:layout_marginTop="8dp"
            android:id="@+id/id_biao_new_sure_imgbnt"
            />


    </LinearLayout>




</LinearLayout>