<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".biao.DailyTasksBiao.dailyTasksBiao_OperateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#0fff0f"
        >
        <com.example.xiaobenben.control.CircleImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:id="@+id/id_biao_dailyTasks_operate_back"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"

            android:src="@drawable/back"
            />

        <TextView
            android:layout_marginStart="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是表明"
            android:layout_gravity="center"
            android:id="@+id/id_biao_dailyTasks_name_tv"
            android:textSize="26dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="历史记录"
            android:id="@+id/id_biao_dailyTasks_to_history_tv"
            />

        <com.example.xiaobenben.control.CircleImageView
            android:layout_marginStart="50dp"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:id="@+id/id_biao_dailyTasks_operate_sure"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"

            android:src="@drawable/dui4"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        >
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="事件名"
            android:textSize="18dp"
            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="时间"
            android:textSize="18dp"
            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="完成情况"
            android:textSize="18dp"
            />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="备注"
            android:textSize="18dp"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="512dp"
            android:id="@+id/id_biao_dailyTasks_operate_lv"

            />

    </LinearLayout>













</LinearLayout>