<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".biao.DailyTasksBiao.dailyTasksBiao_HistoryActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        >



    </LinearLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:columnCount="10"
        android:rowCount="10"
        >



        <Button android:text="1" android:textSize="26sp" />
        <Button android:text="2" android:textSize="26sp" />
        <Button android:text="3" android:textSize="26sp" />
        <Button android:text="+" android:textSize="26sp" />
        <Button android:text="4" android:textSize="26sp" />
        <Button android:text="5" android:textSize="26sp" />
        <Button android:text="6" android:textSize="26sp" />
        <Button android:text="-" android:textSize="26sp" />
        <Button android:text="7" android:textSize="26sp" />
        <Button android:text="8" android:textSize="26sp" />
        <Button android:text="9" android:textSize="26sp" />
        <Button android:text="*" android:textSize="26sp" />
        <Button android:text="*" android:textSize="26sp" />
        <Button android:text="." android:textSize="26sp" />
        <Button android:text="=" android:textSize="26sp" />
        <Button android:text="0" android:textSize="26sp" />





    </GridLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/id_biao_dailyTasks_history_pie_chart"
            android:layout_marginStart="10dp"
            android:layout_marginTop="32dp"
            android:layout_width="250dp"
            android:layout_height="250dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成：10%"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:layout_marginStart="128dp"
            android:id="@+id/id_biao_dailyTasks_history_complete_tv"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未完成：10%"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginStart="128dp"
            android:layout_marginTop="155dp"
            android:id="@+id/id_biao_dailyTasks_history_incomplete_tv"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未操作：10%"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginStart="128dp"
            android:layout_marginTop="180dp"
            android:id="@+id/id_biao_dailyTasks_history_noOperate_tv"
            />



        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="#0000ff"            android:layout_gravity="center"
            android:layout_marginStart="65dp"
            android:layout_marginTop="130dp"
            />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="#00ff00"
            android:layout_gravity="center"
            android:layout_marginStart="65dp"
            android:layout_marginTop="155dp"
            />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="#ff0000"
            android:layout_gravity="center"
            android:layout_marginStart="65dp"
            android:layout_marginTop="180dp"
            />






    </FrameLayout>








</LinearLayout>