<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".biao.DailyTasksBiao.dailyTasksBiao_NewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#FF00FF"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_weixin"
            android:id="@+id/id_biao_dailyTasks_new_back_imgbnt"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建每日任务计划表"
            android:textSize="32dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_weixin"
            android:id="@+id/id_biao_dailyTasks_new_sure_imgbnt"
            />

    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="#FF0f0F"
                android:id="@+id/id_biao_dailyTasks_new_name_tv1"
                android:text="名字"
                android:gravity="center"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="64dp"
                android:background="#0F00FF"
                android:id="@+id/id_biao_dailyTasks_new_name_tv2"
                android:text="开始时间"
                android:gravity="center"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="0.7"
                android:layout_height="64dp"
                android:background="#FF00FF"
                android:id="@+id/id_biao_dailyTasks_new_name_tv3"
                android:text="详情"
                android:gravity="center"
                android:textSize="20dp"
                />


        </LinearLayout>

        <ListView
            android:layout_marginTop="64dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id_biao_dailyTasks_new_lv"
            >


        </ListView>


        <ImageButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/pressed"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:id="@+id/id_biao_dailyTasks_new_add_imgbnt"
            />



    </FrameLayout>






</LinearLayout>