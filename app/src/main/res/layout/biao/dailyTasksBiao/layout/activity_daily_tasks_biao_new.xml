<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".biao.DailyTasksBiao.dailyTasksBiao_NewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#FF00FF"
        >

        <com.example.xiaobenben.control.CircleImageView


            android:id="@+id/id_biao_dailyTasks_new_back_imgbnt"
            android:layout_width="58dp"
            android:layout_gravity="center"
            android:layout_height="58dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/back" />

        <TextView
            android:layout_marginStart="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建每日任务计划表"
            android:layout_gravity="center"
            android:textSize="25dp"
            />


        <com.example.xiaobenben.control.CircleImageView

            android:layout_marginStart="32dp"
            android:id="@+id/id_biao_dailyTasks_new_sure_imgbnt"
            android:layout_width="58dp"
            android:layout_gravity="center"
            android:layout_height="58dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/dui4" />

    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/bt2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:id="@+id/id_biao_dailyTasks_new_name_tv1"
                android:text="名字"
                android:gravity="center"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="64dp"
                android:id="@+id/id_biao_dailyTasks_new_name_tv2"
                android:text="开始时间"
                android:gravity="center"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="0.7"
                android:layout_height="64dp"
                android:id="@+id/id_biao_dailyTasks_new_name_tv3"
                android:text="详情"
                android:gravity="center"
                android:textSize="20dp"
                />


        </LinearLayout>

        <ListView
            android:layout_marginTop="64dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id_biao_dailyTasks_new_lv"
            >


        </ListView>



        <com.example.xiaobenben.control.CircleImageView
            android:layout_marginTop="128dp"
            android:id="@+id/id_biao_dailyTasks_new_add_imgbnt"
            android:layout_width="64dp"
            android:layout_gravity="center"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/jia2" />


    </FrameLayout>






</LinearLayout>