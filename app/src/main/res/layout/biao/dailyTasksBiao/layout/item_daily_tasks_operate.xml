<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="3"

        android:layout_height="match_parent"
        android:text="计划名"
        android:textSize="25dp"
        android:gravity="center"
        android:id="@+id/id_biao_dailyTasks_operarte_item_tv1"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="2"

        android:layout_height="match_parent"
        android:text="时间"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/id_biao_dailyTasks_operarte_item_tv2"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="match_parent"
        android:background="@drawable/tab_weixin"
        android:id="@+id/id_biao_dailyTasks_operarte_item_imgbnt3"

        />




    <EditText
        android:layout_width="0dp"
        android:layout_weight="3"

        android:layout_height="match_parent"
        android:hint="备注"
        android:textSize="32dp"

        android:inputType="text"
        android:lines="1"

        android:id="@+id/id_biao_dailyTasks_operarte_item_et4"
        />







</LinearLayout>