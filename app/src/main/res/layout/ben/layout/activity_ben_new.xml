<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ben.ben_NewActivity">

    <LinearLayout
        android:layout_marginTop="128dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#ff00FFF0"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:background="#ff0ff0"/>

        <EditText
            android:layout_marginStart="32dp"
            android:layout_width="256dp"
            android:layout_height="64dp"
            android:id="@+id/id_ben_new_tv"
            android:hint="默认提示文本"
            android:textColorHint="#95A1AA"
            android:background="#EFEDED"/>


    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:background="#ff00FFF0"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择封面"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"/>

        <GridLayout
            android:layout_marginStart="32dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#ff0ff0fF"

            android:columnCount="3"
            android:rowCount="2">

            <ImageView
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/tab_weixin"
                android:id="@+id/id_ben_new_imgbnt1"
                android:layout_column="0"
                android:layout_row="0"/>
            <ImageView
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/tab_weixin"
                android:id="@+id/id_ben_new_imgbnt2"
                android:layout_column="0"
                android:layout_row="1"/>
            <ImageView
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/tab_weixin"
                android:id="@+id/id_ben_new_imgbnt3"
                android:layout_column="1"
                android:layout_row="0"/>
            <ImageView
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/tab_weixin"
                android:id="@+id/id_ben_new_imgbnt4"
                android:layout_column="1"
                android:layout_row="1"/>



        </GridLayout>


    </LinearLayout>


    <ImageButton
        android:layout_marginTop="64dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:background="@drawable/pressed"
        android:id="@+id/id_ben_new_imgbnt"
        />



</LinearLayout>