<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ben.ben_NewActivity">

    <LinearLayout
        android:layout_marginTop="128dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#8fffffff"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_marginStart="42dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本的名字"
            android:textSize="20dp" />

        <EditText
            android:layout_marginStart="10dp"
            android:layout_width="256dp"
            android:layout_height="64dp"
            android:id="@+id/id_ben_new_tv"
            android:hint="输入笔记本名"
            android:textColorHint="#95A1AA"
            android:background="#afEFEDED"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="28dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#8fffffff"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_marginStart="42dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本的类型"
            android:textSize="20dp" />

        <EditText
            android:layout_marginStart="10dp"
            android:layout_width="256dp"
            android:layout_height="64dp"
            android:id="@+id/id_ben_new_type_tv"
            android:hint="输入本类型：日记/记账/手账"
            android:textColorHint="#95A1AA"
            android:background="#afEFEDED"/>


    </LinearLayout>



    <FrameLayout
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:background="#0000FFF0"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择封面"
            android:textSize="20dp"
            android:layout_gravity="center"

            android:layout_marginStart="-128dp"/>

        <GridLayout
            android:layout_marginStart="128dp"
            android:layout_width="256dp"
            android:layout_height="match_parent"
            android:background="#000ff0fF"

            android:columnCount="3"
            android:rowCount="2">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/ben1"
                android:id="@+id/id_ben_new_imgbnt1"
                android:layout_column="0"
                android:layout_row="0"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/ben2"
                android:id="@+id/id_ben_new_imgbnt2"
                android:layout_column="0"
                android:layout_row="1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/ben3"
                android:id="@+id/id_ben_new_imgbnt3"
                android:layout_column="1"
                android:layout_row="0"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@+id/id_ben_new_imgbnt4"
                android:layout_column="1"
                android:layout_row="1"/>



        </GridLayout>

        <GridLayout
            android:layout_marginStart="128dp"
            android:layout_width="256dp"
            android:layout_height="match_parent"
            android:background="#000ff0fF"

            android:columnCount="3"
            android:rowCount="2">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/sel_kuang"
                android:id="@+id/id_ben_new_kuang1"
                android:layout_column="0"
                android:layout_row="0"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@+id/id_ben_new_kuang2"
                android:background="@drawable/sel_kuang"
                android:layout_column="0"
                android:layout_row="1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@+id/id_ben_new_kuang3"
                android:background="@drawable/sel_kuang"
                android:layout_column="1"
                android:layout_row="0"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:id="@+id/id_ben_new_kuang4"
                android:background="@drawable/sel_kuang"
                android:layout_column="1"
                android:layout_row="1"/>



        </GridLayout>


    </FrameLayout>



    <com.example.xiaobenben.control.CircleImageView
        android:layout_marginTop="32dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="right"
        android:id="@+id/id_ben_new_imgbnt"

        android:layout_centerInParent="true"
        android:scaleType="centerCrop"

        android:src="@drawable/next1"
        />



</LinearLayout>