<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".biao.ScheduleTasksBiao.scheduleTasksBiao_NewActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#FF00FF"
        >

        <com.example.xiaobenben.control.CircleImageView


            android:id="@+id/id_biao_scheduleTasks_new_back_bnt"
            android:layout_width="58dp"
            android:layout_gravity="center|left"
            android:layout_height="58dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建日程计划表"
            android:layout_gravity="center"
            android:textSize="25dp"
            />


        <com.example.xiaobenben.control.CircleImageView

            android:layout_marginStart="32dp"
            android:id="@+id/id_biao_scheduleTasks_new_sure_bnt"
            android:layout_width="58dp"
            android:layout_gravity="center|right"
            android:layout_height="58dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/dui4" />

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bt2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日程"
            android:textSize="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="-150dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预计时间"
            android:textSize="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="-40dp"
            />



        <Button
            android:layout_gravity="center"
            android:layout_marginStart="128dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_biao_scheduleTasks_new_add"
            android:text="添加日程"
            />






    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id_biao_scheduleTasks_new_lv"
            />




    </FrameLayout>



</LinearLayout>