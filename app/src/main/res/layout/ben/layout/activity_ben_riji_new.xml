<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ben.ben_riji_NewActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#ff00FF"
        >


        <com.example.xiaobenben.control.CircleImageView


            android:id="@+id/id_ben_riji_new_imgbnt1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/back" />


        <TextView

            android:layout_marginStart="128dp"
            android:layout_marginTop="18dp"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="字数：0"
            android:textSize="16dp"
            android:id="@+id/id_ben_riji_num_tv"
            />


        <com.example.xiaobenben.control.CircleImageView
            android:layout_marginStart="340dp"


            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/id_ben_riji_new_imgbnt2"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"

            android:src="@drawable/dui3"
            />





    </FrameLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000FF"
        >

        <EditText
            android:cursorVisible="true"

            android:focusable="true"
            android:focusableInTouchMode="true"


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id_ben_riji_new_et"
            android:gravity="top"
            android:background="#0000fff0"/>


    </LinearLayout>








</LinearLayout>