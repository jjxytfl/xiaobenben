<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="147dp">

        <com.example.xiaobenben.control.CircleImageView

            android:id="@+id/id_wo_dl_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mrtx" />


        <TextView
            android:id="@+id/id_wo_dl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="35dp"
            android:text="未登录"
            android:textColor="#ff3f3f"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/id_wo_dl_jj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="95dp"
            android:text=""
            android:textSize="16dp" />


    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="130dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_marginTop="64dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bt2"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginStart="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的信息"
            android:textSize="26dp"
            android:layout_gravity="center"
            android:id="@+id/id_wo_own"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bt2"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginStart="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传下载"
            android:textSize="26dp"
            android:layout_gravity="center"
            android:id="@+id/id_wo_down_or_up"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bt2"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginStart="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性化"
            android:textSize="26dp"
            android:layout_gravity="center"
            android:id="@+id/id_wo_personality"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bt2"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginStart="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题反馈"
            android:textSize="26dp"
            android:layout_gravity="center"
            android:id="@+id/id_wo_feedback"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bt2"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginStart="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新的计划表"
            android:textSize="26dp"
            android:layout_gravity="center"
            android:id="@+id/id_wo_new"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bt2"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginStart="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系作者"
            android:textSize="26dp"
            android:layout_gravity="center"
            android:id="@+id/id_wo_gogo"
            />
    </LinearLayout>

    </LinearLayout>


</FrameLayout>