<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".biao.TourTasksBiao.tourTasksBiao_OperateActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#0fff0f"
        >
        <com.example.xiaobenben.control.CircleImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:id="@+id/id_biao_tourTasks_operate_back"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"

            android:src="@drawable/back"
            />

        <TextView
            android:layout_marginStart="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是表明"
            android:layout_gravity="center"
            android:id="@+id/id_biao_tourTasks_name_tv"
            android:textSize="26dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="历史记录"
            android:id="@+id/id_biao_tourTasks_to_history_tv"
            />

        <com.example.xiaobenben.control.CircleImageView
            android:layout_marginStart="50dp"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:id="@+id/id_biao_tourTasks_operate_sure"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"

            android:src="@drawable/dui4"
            />


    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bt2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旅游计划"
            android:textSize="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="-80dp"
            />




        <Button
            android:layout_gravity="center"
            android:layout_marginStart="128dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_biao_tourTasks_operate_add"
            android:text="添加旅游计划"
            />

    </FrameLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id_biao_tourTasks_operate_lv"
            />




    </LinearLayout>



</LinearLayout>