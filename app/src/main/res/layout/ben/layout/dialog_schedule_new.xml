<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="256dp"
    android:layout_height="256dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        >
        <EditText
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_biao_dialog_schedule_new_et"
            android:hint="任务内容"
            />

        <Button
            android:layout_marginStart="128dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预设"
            android:id="@+id/id_biao_dialog_schedule_bnt"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期"
            android:textSize="18dp"
            />

        <TextView
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="2022-11-12"
            android:id="@+id/id_biao_scheduleTasks_dialog_new_date"
            />

        <Button
            android:layout_marginStart="150dp"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_biao_scheduleTasks_dialog_new_date_mod"
            android:text="修改"
            />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期"
            android:textSize="18dp"
            />

        <TextView
            android:layout_marginStart="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="08:30"
            android:id="@+id/id_biao_scheduleTasks_dialog_new_time"
            />

        <Button
            android:layout_marginStart="150dp"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_biao_scheduleTasks_dialog_new_time_mod"
            android:text="修改"
            />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_biao_scheduleTasks_dialog_new_cancel"
            android:text="取消"
            />

        <Button
            android:layout_marginStart="128dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_biao_scheduleTasks_dialog_new_sure"
            android:text="确定"
            />


    </FrameLayout>



</LinearLayout>