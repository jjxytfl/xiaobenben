<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".biao.ScheduleTasksBiao.scheduleTasksBiao_OperateActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        >
        <Button
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_biao_scheduleTasks_operate_back"
            android:text="返回"
            />

        <Button
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_biao_scheduleTasks_operate_sure"
            android:text="完成"
            />



    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_biao_scheduleTasks_lv"
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:layout_gravity="right|bottom"
            android:id="@+id/id_biao_scheduleTasks_operate_add"
            />


    </FrameLayout>






</LinearLayout>