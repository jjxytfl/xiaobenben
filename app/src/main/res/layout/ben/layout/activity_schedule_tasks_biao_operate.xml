<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".biao.ScheduleTasksBiao.scheduleTasksBiao_OperateActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#0fff0f"
        >
        <com.example.xiaobenben.control.CircleImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:id="@+id/id_biao_scheduleTasks_operate_back"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"

            android:src="@drawable/back"
            />

        <TextView
            android:layout_marginStart="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是表明"
            android:layout_gravity="center"
            android:id="@+id/id_biao_scheduleTasks_name_tv"
            android:textSize="26dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="历史记录"
            android:id="@+id/id_biao_scheduleTasks_to_history_tv"
            />

        <com.example.xiaobenben.control.CircleImageView
            android:layout_marginStart="50dp"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:id="@+id/id_biao_scheduleTasks_operate_sure"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"

            android:src="@drawable/dui4"
            />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bt2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日程"
            android:textSize="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="-150dp"
            />

        <TextView
            android:autoSizeMaxTextSize="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预计时间"
            android:textSize="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="-40dp"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加日程"
            android:layout_gravity="center"
            android:layout_marginStart="128dp"
            android:id="@+id/id_biao_scheduleTasks_operate_add"
            />







    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_biao_scheduleTasks_lv"
        />




    </FrameLayout>






</LinearLayout>