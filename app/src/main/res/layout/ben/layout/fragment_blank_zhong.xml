<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".zhong.Tomato.BlankFragment_zhong">

    <include layout="@layout/main_title"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bt2"
        >
        <ImageView
            android:layout_marginStart="36dp"
            android:layout_marginTop="12dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_launcher"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="番茄钟"
            android:textSize="24dp"
            android:layout_marginStart="-64dp"
            android:textColor="#ff2f2f"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_zhong_huan"
            android:text="切换到经典闹钟"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"/>


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listMain1" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|bottom"
            android:id="@+id/id_add_but"
            android:background="@drawable/bg_fab"
            android:layout_margin="24dp"
            android:text="+"
            android:textColor="#fff"
            android:textSize="30dp"
            android:elevation="5dp"/>


        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left|bottom"
            android:id="@+id/id_go_but"
            />

    </FrameLayout>

</LinearLayout>