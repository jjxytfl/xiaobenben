<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zhong.WarnActivity"
    android:orientation="vertical"
    android:background="#333232"
    android:padding="30dp"
    >
    <LinearLayout
        android:id="@+id/TimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/ClockHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08"
            android:textSize="60sp"
            android:textColor="@color/colorWhite"
            android:alpha="0.4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="50sp"
            android:textColor="@color/colorWhite"
            android:alpha="0.4"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/ClockMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08"
            android:textSize="60sp"
            android:textColor="@color/colorWhite"
            android:alpha="0.4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/TimeLayout">
        <TextView
            android:id="@+id/ClockDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8月8日"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"
            android:alpha="0.4"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/ClockWeek"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:alpha="0.4"
            android:text="星期四"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闹钟"
            android:textSize="30sp"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/WaitAlarm"
            android:layout_width="200dp"
            android:layout_height="50sp"
            android:text="稍后提醒"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="10dp"
            android:background="@drawable/warn_style"
            android:gravity="center"
            android:onClick="RemindLater"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <Button
            android:id="@+id/ClockPause"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="停止"
            android:textColor="@color/colorWhite"
            android:background="@drawable/stopbtn_style"
            android:onClick="StopService"
            />
    </LinearLayout>
</RelativeLayout>